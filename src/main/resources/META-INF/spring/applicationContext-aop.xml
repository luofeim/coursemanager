<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

	<bean id="audience" class="org.rooinaction.coursemanager.aspectj.Audience"></bean>
	<aop:config>
		<aop:aspect ref="audience">
<!--
 			<aop:pointcut 
				expression="execution(* *.findThat(..))" 
				id="findThat"/>

 			<aop:before 
				method="beforeCall" 
				pointcut-ref="findThat" />

 			<aop:after
				method="afterCall" 
				pointcut-ref="findThat" />

 			<aop:after-returning
				method="afterReturnCall" 
				pointcut-ref="findThat" />
				
 			<aop:after-throwing
				method="afterThrowingCall" 
				pointcut-ref="findThat" />

			<aop:around
				method="aroundCall" 
				pointcut-ref="findThat" />
 -->
 			<aop:pointcut 
				expression="execution(* *.findThat(String)) and args(locationName)" 
				id="findThat" />

 			<aop:before 
				method="beforeCallWithParameters" 
				pointcut-ref="findThat" 
				arg-names="locationName" />

 			<aop:after
				method="afterCallWithParameters" 
				pointcut-ref="findThat" 
				arg-names="locationName" />

 			<aop:after-returning
				method="afterReturnCallWithParameters" 
				pointcut-ref="findThat" 
				arg-names="locationName" />
				
 			<aop:after-throwing
				method="afterThrowingCallWithParameters" 
				pointcut-ref="findThat" 
				arg-names="locationName" />

			<aop:around
				method="aroundCallWithParameters" 
				pointcut-ref="findThat" 
				arg-names="locationName" />

 		</aop:aspect>		
	</aop:config>

</beans>
